{
	// Basic Information
	"description": "Written by Roel van Uden.",
	"name": "YouTube-To-Drive",
	"manifest_version": 2,
	"version": "1.3",

	// Content Information
	"background": {
		"scripts": ["jquery-1.9.0.min.js", "background.js"]
	},
	"content_scripts": [{
		"js": ["foreground.js"],
		"matches": ["http://www.youtube.com/watch*", "https://www.youtube.com/watch*"],
		"run_at": "document_end"
	}],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"http://*.youtube.com/*", "https://*.youtube.com/*",
		"http://localhost:7974/*", "https://localhost:7974/*"
	],

	// Visual Information
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	}
}